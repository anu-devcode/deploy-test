generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}


model User {
  id             String   @id @default(uuid())
  email          String   @unique
  firstName      String?
  lastName       String?
  password       String
  role           Role     @default(CUSTOMER)
  isFirstLogin   Boolean  @default(true)
  isEmailVerified Boolean @default(false)
  isSocialLoginEnabled Boolean @default(true) // Admin toggle
  deletedAt      DateTime? // Soft delete coverage
  
  // Two-Factor Authentication
  twoFactorEnabled    Boolean @default(false)
  twoFactorMethod     String? // 'email', 'authenticator', 'sms'
  twoFactorSecret     String? // TOTP secret for authenticator apps
  twoFactorBackupCodes String[] // Backup codes for recovery
  
  permissions    UserPermission[]
  passwordResetTokens PasswordResetToken[]
  emailVerificationTokens EmailVerificationToken[]
  refreshTokens  RefreshToken[]
  reviewedCancellationRequests CancellationRequest[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent String?
  ipAddress String?
  isPrimary Boolean  @default(false)
  isRevoked Boolean  @default(false)
  expiresAt DateTime
  lastUsedAt DateTime @default(now())
  createdAt DateTime @default(now())
}

model Product {
  id             String      @id @default(uuid())
  name           String
  slug           String      @unique // SEO-friendly identifier
  description    String?
  price          Decimal     // Base reference price
  compareAtPrice Decimal?    // Original price for discount display
  stock          Int         @default(0)
  sku            String?
  images         String[]    // Array of image URLs
  tags           String[]    // For filtering and search
  isPublished    Boolean     @default(false)
  isFeatured     Boolean     @default(false)
  
  // Dual Pricing Configuration
  retailEnabled  Boolean     @default(true)
  retailPrice    Decimal?
  retailUnit     String?     @default("kg")
  retailMinOrder Int?        @default(1)
  
  bulkEnabled    Boolean     @default(false)
  bulkPrice      Decimal?
  bulkUnit       String?     @default("Quintal")
  bulkMinOrder   Int?        @default(5)

  categoryId     String?
  category       Category?   @relation(fields: [categoryId], references: [id])
  warehouseId    String?
  warehouse      Warehouse?  @relation(fields: [warehouseId], references: [id])
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  orderItems     OrderItem[]
  cartItems      CartItem[]
  stockMovements StockMovement[]
  reviews        Review[]
  wishlistItems  WishlistItem[]
  marketingAssets MarketingAsset[]
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String
  description String?
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([slug, parentId])
}

model Customer {
  id        String   @id @default(uuid())
  email     String
  firstName String?
  lastName  String?
  phone     String?
  avatar    String?
  
  // Addresses moved to separate model
  addresses CustomerAddress[]
  
  orders    Order[]
  cart      Cart?
  reviews   Review[]
  wishlist  Wishlist?
  notifications Notification[]
  helpMessages  HelpMessage[]
  savedPaymentMethods SavedPaymentMethod[]
  cancellationRequests CancellationRequest[]
  adminNotes String?
  flags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email])
}

model CustomerAddress {
  id        String   @id @default(uuid())
  type      String   @default("Home") // Home, Work, Other
  label     String?  // e.g. "Primary residence"
  street    String
  city      String
  phone     String?
  isDefault Boolean  @default(false)
  
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SavedPaymentMethod {
  id            String        @id @default(uuid())
  type          PaymentMethod
  brand         String?       // e.g. "Visa", "Mastercard", "Telebirr"
  last4         String?       // Last 4 digits for cards
  expiry        String?       // Expiry date for cards
  phone         String?       // For Telebirr/M-Pesa
  accountNumber String?       // For Bank Transfer
  isDefault     Boolean       @default(false)
  
  customerId    String
  customer      Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Cart {
  id         String     @id @default(uuid())
  customerId String     @unique
  customer   Customer   @relation(fields: [customerId], references: [id])
  items      CartItem[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
}

model Wishlist {
  id         String   @id @default(uuid())
  customerId String   @unique
  customer   Customer @relation(fields: [customerId], references: [id])
  items      WishlistItem[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model WishlistItem {
  id         String   @id @default(uuid())
  wishlistId String
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([wishlistId, productId])
}

model Order {
  id              String        @id @default(uuid())
  orderNumber     String?
  total           Decimal
  subtotal        Decimal?
  discount        Decimal?
  promoCode       String?
  shippingTotal   Decimal?      // Shipping cost
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   String?
  paymentRef      String?
  shippingMethod  String?       // e.g., EXPRESS, STANDARD
  shippingAddress String?
  shippingCity    String?
  shippingCountry String?
  trackingNumber  String?
  notes           String?
  
  // Guest Checkout Fields
  isGuest         Boolean       @default(false)
  guestEmail      String?
  guestName       String?
  guestPhone      String?
  trackingToken   String?       @unique // For guest order tracking
  
  customerId      String?       // Optional for guest checkout
  customer        Customer?     @relation(fields: [customerId], references: [id])
  items           OrderItem[]
  payments        Payment[]
  delivery        Delivery?
  cancellationRequests CancellationRequest[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}


model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}

model Payment {
  id                    String        @id @default(uuid())
  orderId               String
  order                 Order         @relation(fields: [orderId], references: [id])
  amount                Decimal
  method                PaymentMethod
  status                PaymentStatus @default(PENDING)
  transactionId         String?
  providerRef           String?
  receiptUrl            String?       // For manual payments
  manualVerificationNote String?      // For admin feedback
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

model Warehouse {
  id          String          @id @default(uuid())
  name        String
  code        String
  address     String?
  city        String?
  country     String?
  isDefault   Boolean         @default(false)
  products    Product[]
  movements   StockMovement[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([code])
}

model StockMovement {
  id          String        @id @default(uuid())
  productId   String
  product     Product       @relation(fields: [productId], references: [id])
  warehouseId String
  warehouse   Warehouse     @relation(fields: [warehouseId], references: [id])
  quantity    Int           // Positive for in, negative for out
  type        MovementType
  reference   String?       // Order ID, adjustment ID, etc.
  batchNumber String?       // For batch tracking
  grade       String?       // For quality grading (e.g., Premium, Grade A)
  userId      String?       // To track who performed the movement
  notes       String?
  createdAt   DateTime      @default(now())
}

model CmsPage {
  id        String   @id @default(uuid())
  title     String
  slug      String
  content   Json     // Rich content blocks
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug])
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "orders.view", "inventory.manage"
  description String?
  users       UserPermission[]
}

model UserPermission {
  userId       String
  permissionId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([userId, permissionId])
}

model AutomationRule {
  id          String   @id @default(uuid())
  name        String
  trigger     String   // e.g., "ORDER_CREATED", "PAYMENT_REFUNDED"
  condition   Json?    // e.g., { "minAmount": 5000 }
  action      String   // e.g., "NOTIFY_ADMIN", "AUTO_CONFIRM"
  actionValue String?
  isActive    Boolean  @default(true)
  logs        AutomationLog[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AutomationLog {
  id        String   @id @default(uuid())
  ruleId    String
  rule      AutomationRule @relation(fields: [ruleId], references: [id])
  status    String   // "SUCCESS", "FAILED"
  details   Json?
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  SUPERADMIN
  ADMIN
  STAFF
  CUSTOMER
}

enum OrderStatus {
  PENDING
  PENDING_VERIFICATION
  CONFIRMED
  PROCESSING
  PACKED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  TELEBIRR
  CBE
  MPESA
  BANK_TRANSFER
  ONLINE
  CASH_ON_DELIVERY
}

enum MovementType {
  PURCHASE
  SALE
  ADJUSTMENT
  TRANSFER
  RETURN
}

model Review {
  id          String       @id @default(uuid())
  rating      Int          // 1 to 5
  comment     String?
  reply       String?      // Staff/Admin response
  status      String       @default("PENDING") // PENDING, APPROVED, REJECTED
  productId   String
  product     Product      @relation(fields: [productId], references: [id])
  customerId  String
  customer    Customer     @relation(fields: [customerId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([productId, customerId])
}

model Notification {
  id          String           @id @default(uuid())
  type        NotificationType
  title       String
  message     String
  link        String?          // e.g., "/orders/123"
  isRead      Boolean          @default(false)
  
  // Targeting
  customerId  String?          // For customer-specific alerts
  customer    Customer?        @relation(fields: [customerId], references: [id])
  
  targetRole  Role?            // For staff/admin role-based alerts
  targetUserId String?         // For specific staff/admin targeting
  
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model HelpMessage {
  id          String            @id @default(uuid())
  subject     String?
  content     String
  status      HelpMessageStatus @default(OPEN)
  senderRole  MessageSenderRole
  isRead      Boolean           @default(false)
  
  // Guest Support
  guestName   String?
  guestEmail  String?
  
  // Threading logic
  parentId    String?
  parent      HelpMessage?      @relation("MessageThread", fields: [parentId], references: [id])
  replies     HelpMessage[]     @relation("MessageThread")

  customerId  String?           // Optional for guests
  customer    Customer?         @relation(fields: [customerId], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

enum NotificationType {
  ORDER_STATUS
  PAYMENT_RECEIVED
  STOCK_ALERT
  PROMOTION
  SYSTEM
  ACCOUNT
  SECURITY
  DELIVERY
  ENGAGEMENT
  INVENTORY
  FINANCE
  MODERATION
  LOGISTICS
}

enum HelpMessageStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum MessageSenderRole {
  CUSTOMER
  ADMIN
  STAFF
}

model Delivery {
  id              String         @id @default(uuid())
  orderId         String         @unique
  order           Order          @relation(fields: [orderId], references: [id])
  status          DeliveryStatus @default(PENDING)
  driverName      String?
  driverPhone     String?
  vehicleInfo     String?
  estimatedTime   DateTime?
  actualDelivery  DateTime?
  notes           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DeliveryStatus {
  PENDING
  ASSIGNED
  PICKED_UP
  IN_TRANSIT
  DELIVERED
  FAILED
  COURIER_MISSED
}

enum PromotionType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum PromotionTarget {
  PRODUCT
  CATEGORY
  CART
}

enum PromoBusinessType {
  RETAIL
  BULK
  BOTH
}

model Promotion {
  id             String           @id @default(uuid())
  name           String
  description    String?
  code           String?          @unique
  type           PromotionType
  target         PromotionTarget
  targetIds      String[]         @default([])
  value          Decimal
  minAmount      Decimal?         @default(0)
  startDate      DateTime?
  endDate        DateTime?
  usageLimit     Int?
  currentUsage   Int              @default(0)
  businessType   PromoBusinessType @default(BOTH)
  isActive       Boolean          @default(true)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([code])
}

model StoreConfig {
  id                  String   @id @default("global")
  isSocialLoginEnabled Boolean  @default(true)
  updatedAt           DateTime @updatedAt
}

// Email Verification
model EmailVerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

// Marketing Email Campaigns
model EmailCampaign {
  id          String         @id @default(uuid())
  name        String
  subject     String
  content     String         // HTML content
  type        CampaignType   @default(PROMOTIONAL)
  status      CampaignStatus @default(DRAFT)
  scheduledAt DateTime?
  sentAt      DateTime?
  sentCount   Int            @default(0)
  openCount   Int            @default(0)
  clickCount  Int            @default(0)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

enum CampaignType {
  PROMOTIONAL
  PRODUCT_UPDATE
  NEWSLETTER
  ANNOUNCEMENT
}

enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  CANCELLED
}

// Email Preferences for Customers
model EmailPreference {
  id              String   @id @default(uuid())
  email           String   @unique
  marketing       Boolean  @default(true)
  orderUpdates    Boolean  @default(true)
  productUpdates  Boolean  @default(true)
  unsubscribeToken String  @unique @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Marketing Assets (Cards, Flyers, QR Codes)
model MarketingAsset {
  id          String   @id @default(uuid())
  type        MarketingAssetType @default(FLYER)
  name        String
  productId   String?
  product     Product? @relation(fields: [productId], references: [id])
  title       String?
  description String?
  promoCode   String?
  qrLink      String
  template    String?  @default("modern") // modern, classic, vibrant
  config      Json?    // { colors: { primary: "#...", secondary: "#..." }, layout: "..." }
  imageUrl    String?  // URL to the generated/preview image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum MarketingAssetType {
  FLYER
  BANNER
  SOCIAL_POST
  QR_ONLY
}

// Order Cancellation Request System
model CancellationRequest {
  id            String                    @id @default(uuid())
  orderId       String
  order         Order                     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  customerId    String?
  customer      Customer?                 @relation(fields: [customerId], references: [id])
  reason        String                    // Customer's reason for cancellation
  status        CancellationRequestStatus @default(PENDING)
  reviewedBy    String?                   // Admin/Staff user ID who reviewed
  reviewedByUser User?                    @relation(fields: [reviewedBy], references: [id])
  staffFeedback String?                   // Staff's response/feedback
  requestedAt   DateTime                  @default(now())
  reviewedAt    DateTime?
  createdAt     DateTime                  @default(now())
  updatedAt     DateTime                  @updatedAt

  @@index([orderId])
  @@index([status])
  @@index([customerId])
}

enum CancellationRequestStatus {
  PENDING
  APPROVED
  REJECTED
}
