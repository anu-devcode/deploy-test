generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  config      Json?    // Stores branding, taxes, workflow rules
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users       User[]
  products    Product[]
  orders      Order[]
  customers   Customer[]
  warehouses  Warehouse[]
  cmsPages    CmsPage[]
  carts       Cart[]
  reviews     Review[]
  deliveries  Delivery[]
  promotions  Promotion[]
  wishlists   Wishlist[]
  notifications Notification[]
  helpMessages  HelpMessage[]
  automationRules AutomationRule[]
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String
  role           Role     @default(STAFF)
  isFirstLogin   Boolean  @default(true)
  tenantId       String
  tenant         Tenant   @relation(fields: [tenantId], references: [id])
  permissions    UserPermission[]
  passwordResetTokens PasswordResetToken[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Product {
  id             String      @id @default(uuid())
  name           String
  slug           String      @unique // SEO-friendly identifier
  description    String?
  price          Decimal     // Base reference price
  compareAtPrice Decimal?    // Original price for discount display
  stock          Int         @default(0)
  sku            String?
  images         String[]    // Array of image URLs
  tags           String[]    // For filtering and search
  isPublished    Boolean     @default(false)
  isFeatured     Boolean     @default(false)
  
  // Dual Pricing Configuration
  retailEnabled  Boolean     @default(true)
  retailPrice    Decimal?
  retailUnit     String?     @default("kg")
  retailMinOrder Int?        @default(1)
  
  bulkEnabled    Boolean     @default(false)
  bulkPrice      Decimal?
  bulkUnit       String?     @default("Quintal")
  bulkMinOrder   Int?        @default(5)

  categoryId     String?
  category       Category?   @relation(fields: [categoryId], references: [id])
  warehouseId    String?
  warehouse      Warehouse?  @relation(fields: [warehouseId], references: [id])
  tenantId       String
  tenant         Tenant      @relation(fields: [tenantId], references: [id])
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  orderItems     OrderItem[]
  cartItems      CartItem[]
  stockMovements StockMovement[]
  reviews        Review[]
  wishlistItems  WishlistItem[]
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String
  description String?
  parentId    String?
  parent      Category? @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children    Category[] @relation("CategoryHierarchy")
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([slug, parentId])
}

model Customer {
  id        String   @id @default(uuid())
  email     String
  firstName String?
  lastName  String?
  phone     String?
  avatar    String?
  
  // Addresses moved to separate model
  addresses CustomerAddress[]
  
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  orders    Order[]
  cart      Cart?
  reviews   Review[]
  wishlist  Wishlist?
  notifications Notification[]
  helpMessages  HelpMessage[]
  adminNotes String?
  flags      String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, tenantId])
}

model CustomerAddress {
  id        String   @id @default(uuid())
  type      String   @default("Home") // Home, Work, Other
  label     String?  // e.g. "Primary residence"
  street    String
  city      String
  phone     String?
  isDefault Boolean  @default(false)
  
  customerId String
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cart {
  id         String     @id @default(uuid())
  customerId String     @unique
  customer   Customer   @relation(fields: [customerId], references: [id])
  tenantId   String
  tenant     Tenant     @relation(fields: [tenantId], references: [id])
  items      CartItem[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(uuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
}

model Wishlist {
  id         String   @id @default(uuid())
  customerId String   @unique
  customer   Customer @relation(fields: [customerId], references: [id])
  tenantId   String
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
  items      WishlistItem[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model WishlistItem {
  id         String   @id @default(uuid())
  wishlistId String
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)
  productId  String
  product    Product  @relation(fields: [productId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([wishlistId, productId])
}

model Order {
  id              String        @id @default(uuid())
  orderNumber     String?
  total           Decimal
  subtotal        Decimal?
  shippingTotal   Decimal?      // Shipping cost
  status          OrderStatus   @default(PENDING)
  paymentStatus   PaymentStatus @default(PENDING)
  paymentMethod   String?
  paymentRef      String?
  shippingMethod  String?       // e.g., EXPRESS, STANDARD
  shippingAddress String?
  shippingCity    String?
  shippingCountry String?
  trackingNumber  String?
  notes           String?
  
  // Guest Checkout Fields
  isGuest         Boolean       @default(false)
  guestEmail      String?
  guestName       String?
  guestPhone      String?
  trackingToken   String?       @unique // For guest order tracking
  
  customerId      String?       // Optional for guest checkout
  customer        Customer?     @relation(fields: [customerId], references: [id])
  tenantId        String
  tenant          Tenant        @relation(fields: [tenantId], references: [id])
  items           OrderItem[]
  payments        Payment[]
  delivery        Delivery?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}


model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
}

model Payment {
  id                    String        @id @default(uuid())
  orderId               String
  order                 Order         @relation(fields: [orderId], references: [id])
  amount                Decimal
  method                PaymentMethod
  status                PaymentStatus @default(PENDING)
  transactionId         String?
  providerRef           String?
  receiptUrl            String?       // For manual payments
  manualVerificationNote String?      // For admin feedback
  metadata              Json?
  createdAt             DateTime      @default(now())
  updatedAt             DateTime      @updatedAt
}

model Warehouse {
  id          String          @id @default(uuid())
  name        String
  code        String
  address     String?
  city        String?
  country     String?
  isDefault   Boolean         @default(false)
  tenantId    String
  tenant      Tenant          @relation(fields: [tenantId], references: [id])
  products    Product[]
  movements   StockMovement[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([code, tenantId])
}

model StockMovement {
  id          String        @id @default(uuid())
  productId   String
  product     Product       @relation(fields: [productId], references: [id])
  warehouseId String
  warehouse   Warehouse     @relation(fields: [warehouseId], references: [id])
  quantity    Int           // Positive for in, negative for out
  type        MovementType
  reference   String?       // Order ID, adjustment ID, etc.
  notes       String?
  createdAt   DateTime      @default(now())
}

model CmsPage {
  id        String   @id @default(uuid())
  title     String
  slug      String
  content   Json     // Rich content blocks
  published Boolean  @default(false)
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([slug, tenantId])
}

model Permission {
  id          String   @id @default(uuid())
  name        String   @unique // e.g., "orders.view", "inventory.manage"
  description String?
  users       UserPermission[]
}

model UserPermission {
  userId       String
  permissionId String
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([userId, permissionId])
}

model AutomationRule {
  id          String   @id @default(uuid())
  name        String
  trigger     String   // e.g., "ORDER_CREATED", "PAYMENT_REFUNDED"
  condition   Json?    // e.g., { "minAmount": 5000 }
  action      String   // e.g., "NOTIFY_ADMIN", "AUTO_CONFIRM"
  isActive    Boolean  @default(true)
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  logs        AutomationLog[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AutomationLog {
  id        String   @id @default(uuid())
  ruleId    String
  rule      AutomationRule @relation(fields: [ruleId], references: [id])
  status    String   // "SUCCESS", "FAILED"
  details   Json?
  createdAt DateTime @default(now())
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum Role {
  SUPERADMIN
  ADMIN
  STAFF
}

enum OrderStatus {
  PENDING
  PENDING_VERIFICATION
  CONFIRMED
  PROCESSING
  PACKED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  REFUNDED
}

enum PaymentMethod {
  TELEBIRR
  CBE
  MPESA
  BANK_TRANSFER
  ONLINE
  CASH_ON_DELIVERY
}

enum MovementType {
  PURCHASE
  SALE
  ADJUSTMENT
  TRANSFER
  RETURN
}

model Review {
  id          String       @id @default(uuid())
  rating      Int          // 1 to 5
  comment     String?
  status      ReviewStatus @default(PENDING)
  productId   String
  product     Product      @relation(fields: [productId], references: [id])
  customerId  String
  customer    Customer     @relation(fields: [customerId], references: [id])
  tenantId    String
  tenant      Tenant       @relation(fields: [tenantId], references: [id])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([productId, customerId])
}

model Notification {
  id          String           @id @default(uuid())
  type        NotificationType
  title       String
  message     String
  link        String?          // e.g., "/orders/123"
  isRead      Boolean          @default(false)
  customerId  String?          // Null for broadcast/system alerts
  customer    Customer?        @relation(fields: [customerId], references: [id])
  tenantId    String
  tenant      Tenant           @relation(fields: [tenantId], references: [id])
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model HelpMessage {
  id          String            @id @default(uuid())
  subject     String?
  content     String
  status      HelpMessageStatus @default(OPEN)
  senderRole  MessageSenderRole
  isRead      Boolean           @default(false)
  
  // Threading logic
  parentId    String?
  parent      HelpMessage?      @relation("MessageThread", fields: [parentId], references: [id])
  replies     HelpMessage[]     @relation("MessageThread")

  customerId  String
  customer    Customer          @relation(fields: [customerId], references: [id])
  tenantId    String
  tenant      Tenant            @relation(fields: [tenantId], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

enum NotificationType {
  ORDER_STATUS
  PAYMENT_RECEIVED
  STOCK_ALERT
  PROMOTION
  SYSTEM
}

enum HelpMessageStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum MessageSenderRole {
  CUSTOMER
  ADMIN
  STAFF
}

model Delivery {
  id              String         @id @default(uuid())
  orderId         String         @unique
  order           Order          @relation(fields: [orderId], references: [id])
  status          DeliveryStatus @default(PENDING)
  driverName      String?
  driverPhone     String?
  vehicleInfo     String?
  estimatedTime   DateTime?
  actualDelivery  DateTime?
  notes           String?
  tenantId        String
  tenant          Tenant         @relation(fields: [tenantId], references: [id])
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
}

enum ReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum DeliveryStatus {
  PENDING
  ASSIGNED
  PICKED_UP
  IN_TRANSIT
  DELIVERED
  FAILED
}

enum PromotionType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum PromotionTarget {
  PRODUCT
  CATEGORY
  CART
}

enum PromoBusinessType {
  RETAIL
  BULK
  BOTH
}

model Promotion {
  id             String           @id @default(uuid())
  name           String
  description    String?
  code           String?          @unique
  type           PromotionType
  target         PromotionTarget
  targetIds      String[]         @default([])
  value          Decimal
  minAmount      Decimal?         @default(0)
  startDate      DateTime?
  endDate        DateTime?
  usageLimit     Int?
  currentUsage   Int              @default(0)
  businessType   PromoBusinessType @default(BOTH)
  isActive       Boolean          @default(true)
  tenantId       String
  tenant         Tenant           @relation(fields: [tenantId], references: [id])
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([code])
}
